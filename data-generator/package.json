{
  "name": "work-order-data-generator",
  "version": "1.0.0",
  "description": "CLI tool to generate realistic sample data for work order timeline",
  "main": "src/cli.ts",
  "scripts": {
    "generate": "ts-node src/cli.ts",
    "generate:small": "ts-node src/cli.ts --centers 5 --orders 8",
    "generate:medium": "ts-node src/cli.ts --centers 20 --orders 50",
    "generate:large": "ts-node src/cli.ts --centers 100 --orders 200",
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:validator": "jest data-validator.spec.ts",
    "test:validator:watch": "jest data-validator.spec.ts --watch"
  },
  "keywords": [
    "data-generator",
    "manufacturing",
    "work-orders",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.35",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
